/* config/sofle.overlay */
/* config/sofle.overlay */
/ {
    /* 기존에 존재할지 모르는 ssd1306 노드 강제 비활성화 */
    chosen {
        zephyr,display = &nice_view;
    };
};

&pro_micro_i2c {
    status = "disabled";
};

&i2c0 {
    status = "disabled";
};

&spi1 {
    status = "okay";
    cs-gpios = <&pro_micro 10 GPIO_ACTIVE_HIGH>;

    nice_view: nice_view@0 {
        compatible = "niceview,niceview";
        reg = <0>;
        spi-max-frequency = <8000000>;
    };
};